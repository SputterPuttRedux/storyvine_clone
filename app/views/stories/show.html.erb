<%= @story.title %><br>
<%= @story.content %><br>
<%= @story.vote_count %><br>
  <% if current_user %>
  <div id="upvote">
    <% if @vote != nil && @vote.user_id == current_user.id %>
    <%= button_to "Delete",vote_delete_path(@vote), :method => :delete, :class => "delete", :confirm => "Are you sure ?"%>
    <% else %>
    <%= render "votes/new" %>
    <% end %>
  <% end %>
</div>

<% if current_user %>
  <% if @story.published == false %>
    <%= link_to "Edit", edit_story_path(@story) %><br>
    <%= link_to "Delete", root_path, :method => :delete %>
  <% end %>
<% end %>

<br><br>

<div class="story-tags">
  <% @story.tags.each do |tag| %>
    <%= link_to "#{tag.name}", tags_show_path(tag) %>
  <% end %>
</div>

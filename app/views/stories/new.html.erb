<div id="container" class="new-story-page">
  <div class="row">
    <div class="large-12 columns">

      <div class="snippet">
        <div class="snippet-content">
        <h4>Snippet:</h4>
           <%= strip_tags(@story.snippet.content) %>
        </div>
        <div class="snippet-author">
          <% if @story.snippet.user %>
            <%= link_to @story.snippet.user.username, user_path(@story.snippet.user)  %> (<%= link_to "link", @story.snippet %>)
          <% end %>
        </div>
      </div>


      <h1> Create a new story </h1>
        <%= form_for @story do |f| %>
          <%= f.label :title %>
          <%= f.text_field :title %><br>

          <%= f.label :content %>
          <%= f.text_area :content, :class => "redactor"%><br>
          <%= f.hidden_field :published, :value => false %>
          <%= f.submit "Save", class:"button round" %>
        <% end %>
        <div class="autosave">
        </div>

      </div>
    </div>
</div>

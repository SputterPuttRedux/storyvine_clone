  <html>

  <head>
    <%= javascript_tag do %>
    window.rootJSON = <%= raw @snippet.to_json(include: :children) %>
    <% end %>
    <link href="http://fonts.googleapis.com/css?family=Bitter|Bree+Serif" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/assets/joint.js?body=1"></script>
    <script src="/assets/vine.js?body=1"></script>
    <link rel="stylesheet" media="screen" href="/assets/joint.css?body=1">
    <link rel="stylesheet" media="screen" href="/assets/foundation_and_overrides.css?body=1">
    <style>
    body {
      font-family: 'Bitter';
      background-color: #FCFDFF;
    }

    #vine-graph {
      width: 100%;
      height: 100%;
    }

.top-bar-section > ul > .divider, .top-bar-section > ul > [role="separator"] {
  padding-right: 5px;
  border-right: 1px solid transparent;
}

.top-bar-section li:not(.has-form) a:not(.button) {
  font-family: 'Bitter', serif;
  font-size: 1em;
  background: none;
  color: #008CBA;
}

.top-bar-section ul li {
  background: none;
}

.top-bar-section .dropdown li:not(.has-form):not(.active) > a:not(.button) {
  background: none;
}

.top-bar-section li:not(.has-form) a:not(.button):hover {
}

.top-bar-section .dropdown li:not(.has-form):not(.active) > a:not(.button) {
  background-color: #372e27;
}

.sticky {
  padding: 10px;
  border-bottom: 2px solid #372e27;
}

.top-bar {
  padding-bottom: 20px;
  margin: 10px;
  background: none;
  border-bottom: 2px solid #372e27;
}
.top-logo-name a {
  padding: 5px 10px 15px 10px;
  font-size: 1.8em;
}

    </style>
  </head>

  <body>
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="top-logo-name">
          <% if current_user %>
            <%= link_to 'Story Vine', :dashboard, class: "story-vine-link" %>
          <% else %>
            <%= link_to 'Story Vine', :root, class: "story-vine-link" %>
          <% end %>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
      </ul>

      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          <li class="divider"></li>
            <li> <%= link_to 'Back', :back %></li>
            <li class="divider"></li>
        </ul>

      </section>
    </nav>


  <div id="vine-graph">

  </div>

  </body>
  </html>

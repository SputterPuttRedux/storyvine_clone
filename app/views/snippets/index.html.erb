<div class="row">
  <div class="large-12 columns">
    <div class="snippet-header">
      Snippets
    </div>
    <ul class="tabs" data-tab>
      <li>Sort By:</li>
      <li class="tab-title active"><a href="#panel1">All</a></li>
      <li class="tab-title"><a href="#panel2">Most Recent</a></li>
      <li class="tab-title"><a href="#panel3">Most Popular</a></li>
    </ul>
    <div class="tabs-content">
      <div class="content active" id="panel1">
        <% @snippets.each do |snippet| %>
            <% if snippet.content %>
            <div class="snippet">
              <div class="snippet-content">
                <%= strip_tags(snippet.content) %>
              </div>
              <div class="snippet-link">
                <%= link_to "(link)", snippet_path(snippet) %>
              </div>
            </div>
            <% end %>
            <% end %>
      </div>
      <div class="content" id="panel2">
        <% @most_recent.each do |snippet| %>
            <% if snippet.content %>
            <div class="snippet">
              <div class="snippet-content">
                <%= strip_tags(snippet.content) %>
                <p> Submitted on <%= snippet.created_at.to_date %></p>
              </div>
              <div class="snippet-link">
                <%= link_to "(link)", snippet_path(snippet) %>
              </div>
            </div>
            <% end %>
            <% end %>
      </div>
      <div class="content" id="panel3">
        <% @most_popular.each do |snippet| %>
            <% if snippet.content %>
            <div class="snippet">
              <div class="snippet-content">
                <%= strip_tags(snippet.content) %>
                <p> Stories: <%= snippet.stories_count %></p>
              </div>
              <div class="snippet-link">
                <%= link_to "(link)", snippet_path(snippet) %>
              </div>
            </div>
            <% end %>
            <% end %>
      </div>
    </div>
  </div>
</div>



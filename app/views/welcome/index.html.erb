<html>
<head>
  <style type="text/css">
  html,
  body {
    margin: 0;
    height: 100%
  }

  h1,
  p {
    margin: 0;
    padding: 0;
  }

  header {
    position: fixed;
    top: 10px;
    left: 10px;
  }

  section {
    text-align: center;
    color: #EFEFEF;
  }
  </style>
  <link href='http://fonts.googleapis.com/css?family=Bitter|Bree+Serif' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
  <body>

<div class="sticky">
<nav class="top-bar" data-topbar role="navigation" data-options="sticky_on: large">
  <ul class="title-area">
    <li class="name">
      <span class="top-left-logo">Story Vine</span>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li>
      </li>
      <li class=""><a href="#" data-reveal-id="login">Login</a></li>
      <li class=""><a href="#" data-reveal-id="signup">Signup</a></li>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
    </ul>
  </section>
</nav>
</div>



<div id="login" class="reveal-modal" data-reveal>
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.text_field :email, :placeholder => "Email" %>
    <%= f.password_field :password, :placeholder => "Password"%>
    <%= f.submit "Login", :class => "alert button expand" %>
  <% end %>
  <a class="close-reveal-modal">&#215;</a>
</div>

<div id="signup" class="reveal-modal" data-reveal>
  <%= form_for(:user, url: signup_path) do |f| %>
        <fieldset>
          <legend>Signup</legend>
            <%= f.label :username %>
            <%= f.text_field :username %>
            <%= f.label :email %>
            <%= f.text_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
            <%= f.submit "Sign Up" %>
        </fieldset>
      <% end %>
  <a class="close-reveal-modal">&#215;</a>
</div>


<div class="row fullWidth">
  <div class="large-12 columns" style="padding: 0px;">
    <header role="banner">
</header>

<main class="full-screen" role="main">
  <section class="full-screen first-screen">
    <div class="row">
      <div class="small-12 columns">
    <div class="headerlogo">Story Vine</div>
    </div>
    <div class="small-12 columns">
    <span id="index-typed"></span>
    </div>
    <div class="small-12 columns">
      <div class="search-bar">
        <%= form_tag stories_search_path, :method => :get do %>
            <%= text_field_tag :search, params[:search], :placeholder => "search for stories" %>
        <%= submit_tag "Search", :name => nil %>
        <% end %>
      </div>
    </div>
    </div>
  </section>

  <section id="pinned-trigger1" class="full-screen second-screen">
    <div id="pinned-element1">
      <div class="headerlogo">Popular Snippets</div>
    </div>
  </section>

  <section id="pinned-trigger2" class="full-screen third-screen">
    <div id="pinned-element2">
      <div class="headerlogo">Popular Stories</div>
    </div>
  </section>

  <section class="full-screen last-screen">
    <div>
      <div class="headerlogo">Meet the Team</div>
    </div>
  </section>
  <footer class="row">
    <div class="large-12 columns">
      <hr/>
      <div class="row">
        <div class="large-6 columns">
          <p>Â© Copyright no one at all. Go to town.</p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><a href="#">Link 1</a></li>
            <li><a href="#">Link 2</a></li>
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
</main>
</div>
</div>

<script>
  $(function(){
      $("#index-typed").typed({
        strings: ["Have a thought.", "Jot it down.", "... Share it here.", "Inspire others."],
        typeSpeed: 70
      });
  });
</script>
  </body>
</html>

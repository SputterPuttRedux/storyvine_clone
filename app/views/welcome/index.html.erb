<html>
<head>
  <style type="text/css">
  html,
  body {
    margin: 0;
    height: 100%
  }

  h1,
  p {
    margin: 0;
    padding: 0;
  }

  header {
    position: fixed;
    top: 10px;
    left: 10px;
  }

  section {
    text-align: center;
    color: #EFEFEF;
  }
  </style>
  <link href='http://fonts.googleapis.com/css?family=Bitter|Bree+Serif' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
  <body>

<div class="sticky">
  <nav class="top-bar" data-topbar role="navigation" data-options="sticky_on: large">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to 'Story Vine', :root %></h1>
    </li>
  </ul>


  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li>
      </li>
      <% if current_user %>
        <li><%= link_to "Hello, #{current_user.username}", user_path(current_user) %></li>
        <li class="divider"></li>
        <li class="has-dropdown">
          <a href="#">MENU</a>
          <ul class="dropdown">
            <li class="divider"></li>
            <li><%= link_to 'New Snippet', new_snippet_path%></li>
            <li class="divider"></li>
            <li><%= link_to 'Profile', user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Dashboard', dashboard_path %></li>
            <li class="divider"></li>
            <li><%= link_to 'Logout', logout_path(current_user) %></li>
          </ul>
        </li>
      <% else %>
      <li class=""><a href="#" data-reveal-id="login">Login</a></li>
      <li class=""><a href="#" data-reveal-id="signup">Signup</a></li>
      <% end %>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
    </ul>
  </section>
</nav>

</div>



  <div id="login" class="reveal-modal" data-reveal>
    <%= render 'layouts/login' %>
    <a class="close-reveal-modal">&#215;</a>
  </div>

  <div id="signup" class="reveal-modal" data-reveal>
    <%= render 'layouts/signup' %>
    <a class="close-reveal-modal">&#215;</a>
  </div>


<div class="row fullWidth">
  <div class="large-12 columns" style="padding: 0px;">
    <header role="banner">
</header>

<main class="full-screen" role="main">
  <section class="full-screen first-screen">
    <div class="row">
      <div class="small-12 columns">
    <div class="headerlogo">Story Vine</div>
    </div>
    <div class="small-12 columns">
    <span id="index-typed"></span>
    </div>
    <div class="small-12 columns">
      <div class="search-bar">
        <%= form_tag stories_search_path, :method => :get do %>
            <%= text_field_tag :search, params[:search], :placeholder => "search for stories" %>
            <%= submit_tag "Search", :name => nil, class: "button round" %>
        <% end %>
      </div>
    </div>
    </div>
  </section>

    <section id="pinned-trigger-feature" class="full-screen feature-screen">
    <div id="pinned-element-feature">
      <div class="headerlogo">Featured Story</div>
      <ol class ="index-list">
        <h2>
          <%= link_to "#{random_story.title}", story_path(@story) %>
        </h2>
      </ol>
    </div>
    <div class="story-of-the-day">

  </section>


  <section id="pinned-trigger1" class="full-screen second-screen">
    <div id="pinned-element1">
      <div class="headerlogo">Popular Snippets</div>
      <ol class ="index-list">
      <% @popular_snippets.each do |snippet| %>
        <% snippet.each do |key, value| %>
        <li>
          <%= link_to key.content, snippet_path(key) %> <%= value %> Stories Created
        </li>
        <% end %>
      <% end %>
      </ol>
    </div>
    <div class="story-of-the-day">

  </section>

  <section id="pinned-trigger2" class="full-screen third-screen">
    <div id="pinned-element2">
      <div class="headerlogo">Popular Stories</div>
      <ol class ="index-list">
      <% @popular_stories.each do |story| %>
        <% story.each do |key, value| %>
        <li>
         <div class="popular-stuff">
          <%= link_to key.title, story_path(key) %>
          <%= value %> Tags
        </div>
        </li>
        <% end %>
      <% end %>
      </ol>
  </section>


  <section class="full-screen last-screen">
    <div>
      <div class="headerlogo">Meet the Team</div>
    </div>
  </section>
  <footer class="row">
    <div class="large-12 columns">
      <hr/>
      <div class="row">
        <div class="large-6 columns">
          <p>Â© StoryVine</p>
        </div>
        <div class="large-6 columns">

        </div>
      </div>
    </div>
  </footer>
</main>
</div>

<script>
  $(function(){
      $("#index-typed").typed({
        strings: ["Have a thought.", "Jot it down.", "... Share it here.", "Inspire others."],
        typeSpeed: 70
      });
  });
</script>
  </body>
</html>
